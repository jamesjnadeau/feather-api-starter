{
  "apps" : [
    {
      "name"        : "api",
      "script"      : "./bin/www",
      "watch"       : ["api", "node_modules/_local"],
      "restart_delay": "5000",
      "ignore_watch": [
        "api/assets",
        "api/public",
        "api/views",
        "node_modules/_local/assets"
      ],
    },
    {
      "name"        : "frontend",
      "script"      : "./bin/dev-frontend",
      "watch"       : ["frontend", ],
      "restart_delay": "5000",
      "ignore_watch": [
        "frontend/assets",
        "frontend/built",
        "frontend/content",
        //need to convert content loader to plugin to not have this
        //then watch and trigger rebuild on view template change
        //"frontend/views",
        "frontend/layouts",
      ],
    },
    {
      "name"        : "staging",
      "script"      : "./bin/dev-staging",
    },
    {
        "name"        : "manager",
        "script"      : "./bin/dev-manager",
    },
  ]
}
